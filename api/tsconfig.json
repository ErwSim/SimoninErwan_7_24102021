{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src/",
    "paths": {
      "*": ["../node_modules/*"],
      "@controllers": ["controllers/index.ts"],
      "@routes": ["routes/index.ts"],
      "@helpers": ["helpers/index.ts"],
      "@middlewares": ["middlewares/index.ts"]
    }
  },
  "include": ["src"]
}
